<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE1126"
    tools:context=".add_part">

    <ImageView
        android:id="@+id/edit_part_colorfilter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#40EEE8E8"
        android:contentDescription="@string/color_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/edit_parts_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/edit_part"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sn_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:labelFor="@id/sn_edit_part_edittext"
        android:text="@string/serial_number"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/name_edit_part_edittext"
        app:layout_constraintStart_toStartOf="@+id/name_edit_part_edittext"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_part_edittext" />

    <TextView
        android:id="@+id/cost_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:labelFor="@id/cost_edit_part_edittext"
        android:text="@string/cost"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sn_edit_part_edittext"
        app:layout_constraintStart_toStartOf="@+id/sn_edit_part_edittext"
        app:layout_constraintTop_toBottomOf="@+id/sn_edit_part_edittext" />

    <TextView
        android:id="@+id/name_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:labelFor="@id/name_edit_part_edittext"
        android:text="@string/name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pick_edit_part_dropdown"
        app:layout_constraintStart_toStartOf="@+id/pick_edit_part_dropdown"
        app:layout_constraintTop_toBottomOf="@+id/pick_edit_part_dropdown" />

    <EditText
        android:id="@+id/name_edit_part_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="@+id/name_edit_part_textview"
        app:layout_constraintStart_toStartOf="@+id/name_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_part_textview" />

    <EditText
        android:id="@+id/cost_edit_part_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="@+id/cost_edit_part_textview"
        app:layout_constraintStart_toStartOf="@+id/cost_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/cost_edit_part_textview" />

    <EditText
        android:id="@+id/sn_edit_part_edittext"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="@+id/sn_edit_part_textview"
        app:layout_constraintStart_toStartOf="@+id/sn_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/sn_edit_part_textview" />

    <Button
        android:id="@+id/cancel_edit_part_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_border"
        android:text="@android:string/cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/sn_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/cost_edit_part_edittext" />

    <Button
        android:id="@+id/ok_edit_part_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:background="@drawable/button_border"
        android:text="@android:string/ok"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/sn_edit_part_textview"
        app:layout_constraintTop_toTopOf="@+id/cancel_edit_part_button" />

    <TextView
        android:id="@+id/pick_edit_part_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/pick_one"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edit_parts_header"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edit_parts_header"
        app:layout_constraintTop_toBottomOf="@+id/edit_parts_header" />

    <Spinner
        android:id="@+id/pick_edit_part_dropdown"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintEnd_toEndOf="@+id/pick_edit_part_textview"
        app:layout_constraintStart_toStartOf="@+id/pick_edit_part_textview"
        app:layout_constraintTop_toBottomOf="@+id/pick_edit_part_textview" />

</android.support.constraint.ConstraintLayout>